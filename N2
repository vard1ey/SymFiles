/*
Текстовый файл состоит не более чем из 10^6 символов L, D и R.
Определите максимальное количество идущих подряд символов, среди которых каждые два соседних различны.
Для выполнения этого задания следует написать программу. Ниже приведён файл, который необходимо обработать с помощью данного алгоритма.
 */
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;

public class XYZ {
    public static void main(String[] args) throws IOException {
        String content = Files.readString(Paths.get("C:\\Users\\xyudi\\Downloads\\zadanie24_2.txt"));
        int k = 0;
        int m = 0;

        for (int i = 0; i < content.length() - 1; i++) {
            if (content.charAt(i) != content.charAt(i + 1)) {
                k++;
                m = Math.max(m, k);
            } else {
                k = 1;
            }
        }

        System.out.println("Максимальное количество идущих подряд символов: " + m);
    }
}
