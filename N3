/*
Текстовый файл состоит из символов P, Q, R и S.
Определите максимальное количество идущих подряд символов в прилагаемом файле, среди которых нет идущих подряд символов P.
Для выполнения этого задания следует написать программу.
 */
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;

public class XYZ {
    public static void main(String[] args) throws IOException {
        String content = Files.readString(Paths.get("C:\\Users\\xyudi\\Downloads\\24.txt"));
        char c1 = '0';
        char c2 = '0';
        int k = 1;
        int max = 0;

        for (int i = 0; i < content.length(); i++) {
            c2 = c1;
            c1 = content.charAt(i);

            if (c1 == c2 && c2 == 'P') {
                if (k > max) max = k;
                k = 1;
            } else {
                k++;
            }
        }

        if (k > max) max = k;
        System.out.println("Ответ: " + max);
    }
}
