/*
Текстовый файл состоит не более чем из 10^6 символов X, Y и Z.
Определите максимальную длину цепочки вида XYZXYZXYZ... (составленной из фрагментов XYZ, последний фрагмент может быть неполным).
Для выполнения этого задания следует написать программу. Ниже приведён файл, который необходимо обработать с помощью данного алгоритма.
 */
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;

public class XYZ {
    public static void main(String[] args) throws IOException {
        String content = Files.readString(Paths.get("C:\\Users\\xyudi\\Downloads\\24_demo.txt"));
        int k = 0;
        int m = 0;

        for (int i = 0; i < content.length(); i++) {
            if ((content.charAt(i) == 'X' && k % 3 == 0) ||
                    (content.charAt(i) == 'Y' && k % 3 == 1) ||
                    (content.charAt(i) == 'Z' && k % 3 == 2)) {
                k++;
                m = Math.max(m, k);
            } else if (content.charAt(i) == 'X') {
                k = 1;
            } else {
                k = 0;
            }
        }

        System.out.println("Максимальняа длина цепочки: " + m);
    }
}
